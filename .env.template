# ===================================================================
# GHGConnect Development Environment Configuration
# ===================================================================
# Copy this file to .env for local development
# DO NOT commit .env to version control
# ===================================================================

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# Database Configuration
# For Docker Compose setup
DATABASE_URL=postgresql://ghgconnect_user:ghgconnect_dev_password_2024@localhost:5432/ghgconnect_db
POSTGRES_USER=ghgconnect_user
POSTGRES_PASSWORD=ghgconnect_dev_password_2024
POSTGRES_DB=ghgconnect_db

# Redis Configuration (for caching and job queues)
REDIS_URL=redis://:ghgconnect_redis_password_2024@localhost:6379

# JWT Configuration
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=dev-jwt-secret-change-for-production-use-randomBytes
JWT_REFRESH_SECRET=dev-jwt-refresh-secret-change-for-production-use-randomBytes

# Session Configuration
SESSION_SECRET=dev-session-secret-change-for-production

# CORS Configuration
CORS_ORIGIN=http://localhost:5000

# Testing Configuration
# ONLY set this to 'true' in automated test environments
SKIP_AUTH_FOR_TESTS=false

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Email Configuration (optional for development)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASSWORD=password
# SMTP_FROM=noreply@ghgconnect.com

# Feature Flags (optional)
ENABLE_REDIS_CACHE=true
ENABLE_BACKGROUND_JOBS=false
ENABLE_METRICS=true
ENABLE_AUDIT_LOGS=true

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ===================================================================
# Notes:
# - These are development defaults and NOT secure for production
# - Always use strong, unique secrets in production
# - Database and Redis run in Docker containers
# ===================================================================
